<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/rv_search_image"
            android:layout_width="450dp"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/iv_rvresult_thum" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="100dp">

            <ImageView
                android:id="@+id/rv_search_chImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/iv_rvresult_thum"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginStart="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rv_search_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="맛있는 참치 무조림 만들기"
                android:textSize="17sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/rv_search_chTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자취왕 스파르타" />

                <TextView
                    android:id="@+id/rv_search_viewCount"
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22회" />

                <TextView
                    android:id="@+id/rv_search_uploadDate"
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4일전"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>




</LinearLayout>