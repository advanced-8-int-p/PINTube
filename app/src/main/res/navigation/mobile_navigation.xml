<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Theme.MaterialComponents"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.pintube.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_navigation_detail"
            app:destination="@id/navigation_detail"
            app:popUpTo="@id/navigation_home"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_navigation_home_to_navigation_mypage"
            app:destination="@id/navigation_mypage"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_mypage"
        android:name="com.example.pintube.ui.mypage.MypageFragment"
        android:label="@string/title_mypage"
        tools:layout="@layout/fragment_mypage">

        <action
            android:id="@+id/action_navigation_mypage_to_navigation_home"
            app:destination="@id/navigation_home"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_navigation_mypage_to_navigation_detail"
            app:destination="@id/navigation_detail"
            app:popUpTo="@id/navigation_mypage"
            app:popUpToInclusive="true" />
    </fragment>


    <fragment
        android:id="@+id/navigation_detail"
        android:name="com.example.pintube.ui.detailpage.DetailFragment"
        android:label="@string/title_mypage"
        tools:layout="@layout/fragment_detail" >
        <action
            android:id="@+id/action_navigation_detail_to_navigation_home"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/navigation_detail"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_navigation_detail_to_navigation_mypage"
            app:destination="@id/navigation_mypage"
            app:popUpTo="@id/navigation_detail"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>