<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">


    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/detail_fragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white"
            motion:layout_constraintHeight_percent="1"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"/>
        <Constraint
            android:id="@+id/player_detail"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toTopOf="@+id/cl_detail_channel"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintDimensionRatio="16:9"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/cl_detail_motion_bar"
            motion:layout_constraintStart_toEndOf="@id/player_detail"
            motion:layout_constraintEnd_toStartOf="@+id/ll_detail_motion_btn_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@id/player_detail"
            android:visibility="gone"
            motion:layout_constraintTop_toTopOf="@id/player_detail" />
        <Constraint
            android:id="@+id/ll_detail_motion_btn_bar"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="96dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="@id/cl_detail_motion_bar"
            android:visibility="gone"
            motion:layout_constraintTop_toTopOf="@id/cl_detail_motion_bar" />
        <Constraint
            android:id="@+id/cl_detail_channel"
            android:elevation="4dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            motion:layout_constraintTop_toBottomOf="@+id/player_detail"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/sv_detail_info"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintHeight_percent="0.40"
            motion:layout_constraintTop_toBottomOf="@+id/cl_detail_channel"
            motion:layout_constraintBottom_toTopOf="@+id/cl_detail_comment"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/cl_detail_comment"
            android:elevation="4dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/sv_detail_info"
            motion:layout_constraintHeight_percent="0.24"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/cl_detail_bookmark"
            motion:layout_constraintEnd_toEndOf="@+id/sv_detail_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toTopOf="@+id/cl_detail_comment"
            motion:layout_constraintTop_toTopOf="@+id/sv_detail_info"
            motion:layout_constraintStart_toStartOf="@+id/sv_detail_info" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/detail_fragment"
            android:layout_width="0dp"
            motion:layout_constraintHeight_percent="0.3"
            android:layout_marginBottom="128dp"
            android:background="@color/white"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"/>
        <Constraint
            android:id="@+id/player_detail"
            android:layout_width="0dp"
            android:layout_height="69.75dp"
            android:layout_marginBottom="72dp"
            motion:layout_constraintDimensionRatio="16:9"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent" />
        <Constraint
            android:id="@+id/cl_detail_motion_bar"
            motion:layout_constraintStart_toEndOf="@id/player_detail"
            motion:layout_constraintEnd_toStartOf="@+id/ll_detail_motion_btn_bar"
            android:layout_width="0dp"
            android:layout_height="69.75dp"
            motion:layout_constraintBottom_toBottomOf="@id/player_detail"
            motion:layout_constraintTop_toTopOf="@id/player_detail" />
        <Constraint
            android:id="@+id/ll_detail_motion_btn_bar"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="69.75dp"
            motion:layout_constraintBottom_toBottomOf="@id/cl_detail_motion_bar"
            motion:layout_constraintTop_toTopOf="@id/cl_detail_motion_bar" />
        <Constraint
            android:id="@+id/cl_detail_channel"
            android:elevation="4dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            motion:layout_constraintTop_toBottomOf="@+id/player_detail"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/sv_detail_info"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="100dp"
            android:visibility="gone"
            motion:layout_constraintTop_toBottomOf="@+id/cl_detail_channel"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/cl_detail_comment"
            android:elevation="4dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/sv_detail_info"
            motion:layout_constraintHeight_percent="0.24"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/cl_detail_bookmark"
            motion:layout_constraintEnd_toEndOf="@+id/sv_detail_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            motion:layout_constraintBottom_toTopOf="@+id/cl_detail_comment"
            motion:layout_constraintTop_toTopOf="@+id/sv_detail_info"
            motion:layout_constraintStart_toStartOf="@+id/sv_detail_info" />
    </ConstraintSet>

    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/end"
        motion:duration="1000">
        <KeyFrameSet>

            <KeyPosition
                motion:motionTarget="@+id/player_detail"
                motion:framePosition="60"
                motion:keyPositionType="deltaRelative" />
        </KeyFrameSet>
        <OnSwipe
            motion:dragDirection="dragDown"
            motion:touchAnchorId="@+id/player_detail"
            motion:touchAnchorSide="top"/>
    </Transition>


    <Transition
        motion:constraintSetStart="@+id/end"
        motion:constraintSetEnd="@+id/start"
        motion:duration="1000">
        <KeyFrameSet>

        </KeyFrameSet>
        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@+id/cl_detail_motion_bar"/>
    </Transition>

</MotionScene>